{% extends 'partials/base.html.twig' %}
{% set grid_size = theme_var('grid-size') %}
{% set affiliation = page.header.affiliation %}
{% set interests = page.header.interests %}
{% set contents = page.content|split('<hr />') %}


{% block body %}

<section id="body-wrapper" class="person-container">
	<section class="container {{ grid_size }} p-relative">
    {% block intro %}
        <div class="columns">
            <section class="intro column col-8 col-mx-auto">
                <div class="intro-img">
                    <img class="main-img" src="{{ page.media['main.png'].url|e }}"/>
                </div>
                <div class="intro-text">
                    <div class="highlighted-text title">
                        <span class="name">
                            {{page.title}}
                        </span>
                        <div class="highlight-container">
                            <div class="highlight"></div>
                            <div class="affiliation">
                                <p>
                                    {{ affiliation }}
                                </p>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </section>
        </div>
    {% endblock intro %}

        <div class="columns person-text-parent">
            <section class="person-text column columns col-11">
                <div id="left-column" class="column col-6">
                    <section id="conference" class="columns">
                        <div class="column col-4">
                            <h3>Research Interests</h3>
                        </div>
                        <div class="column col-8">
                            {% for interest in interests %}
                                <div class="news-list-item">
                                    {{ interest.interest }};
                                </div>
                            {% endfor %}
                        </div>
                    </section>
                </div>
                <div id="right-column" class="column col-6">
                    <section id="defences" class="columns">
                        <div class="column col-4">
                            <h3>About</h3>
                        </div>
                        <div class="column col-8">
                            <section class="defence-year-item">
                                {{contents[0]}}
                            </section>
                        </div>
                    </section>
                </div>
            </section>
        </div>

        {% if page.header.website %}
            <section class="website">
                <div class="website-inner-container">
                    <div class="website-icon">
                        <svg preserveAspectRatio="xMidYMid meet" data-bbox="32.6 32.5 134.9 135" viewBox="32.6 32.5 134.9 135" height="200" width="200" xmlns="http://www.w3.org/2000/svg" data-type="shape" role="img">
