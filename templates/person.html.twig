                            </g>
                        </svg>
                    </div>
                    <div class="website-text">
                        <a href="{{ page.header.website }}">
                            {{ page.header.website }} <br>
                        </a>
                        {% if page.header.email %}
                            <a href="{{ 'mailto:' ~ page.header.email }}">
                                {{ page.header.email }}
                            </a>
                        {% endif %}
                    </div>
                    <div class="intro-divider-container">
                        <div class="intro-divider"></div>
                    </div>
                </div>
            </section>
        {% endif %}

        <section class="publications pt-2">
            {{contents[1]}}
        </section>

    </section>
</section>

{% endblock %}