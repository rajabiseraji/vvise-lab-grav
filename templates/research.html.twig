{% extends 'partials/base.html.twig' %}
{% set grid_size = theme_var('grid-size') %}

{% block body %}
    <section id="body-wrapper" class="research-container">
        <section class="container {{ grid_size }} p-relative">

            {% block intro %}
            <section id="intro" class="columns">
                <div class="column col-9 col-mx-auto">
                    <h1 class="intro-title">
                        {{ page.header.title }}
                    </h1>
                    <p class="intro-text">{{page.header.desc}}</p>
                    
                    {% include 'partials/research-topic-list.html.twig' with page.header.topics %}
                </div>
            </section>
            {% endblock %}

            
        </section>

    </section>

{% endblock %}

{% block content %}
	{{ page.content|raw }}
{% endblock %}

