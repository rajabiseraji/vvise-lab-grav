
<section class="image-container col-12 columns">
    {% for person in people %}
        {% if person.slug != 'alumni' %}
            <section class="people-image-card column col-3">
                <div class="people-container">
                <a href="{{ uri.url(false) ~ '/' ~ person.slug()  }}">
                    <img src="{{ person.media['main.png'].url|e }}" alt="{{person.header.title}}">
                    <div class="name-container">
                        <span class="name">
                            {{person.header.title}}
                        </span>
                        <span class="title">
                            {% for affiliation in person.header.affiliations %}
                                {{affiliation.title}}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </span>
                    </div>
                </a>
                </div>
            </section>
        {% endif %}
    {% endfor %}
</section>
