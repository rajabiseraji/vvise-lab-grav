
<pre>
    {{ dump(topics) }}
</pre>
<div id="topic-list" class="columns">
	{% for topic in page.children %}
        <div class="topic-item">
            <div class="topic-container">
                <div class="image-container">
                    {% set var = topic.title %}
                    <a href="{{ uri.url(false) ~ '/' ~ topic.slug()  }}">
                        {% if topic %}
                            {% set topic_image_file = '0' ~ loop.index ~ '.' ~ topic.slug() ~ '/main.webp' %}
                            {{ dump(topic_image_file) }}
                            <img class="topic-image" src="{{ url('user://pages/04.research-projects/' ~ topic_image_file) }}" alt="{{ topic.title }}"/>
                        {% else %}
                            no logo :(
                        {% endif %}      
                        <div class="topic-title-container">
                            <h2 class="topic-title">
                                {{ topic.title }}
                            </h2>
                        </div>
                    </a>
                </div>
                <p class="topic-sub-categories">
                    <span>
                        <a href="">Large Display Immersive</a>
                        <a href="">Displays, 3D</a><br>
                        <a href="">Tracking and Haptic Systems</a>
                    </span>
                </p>
            </div>
        </div>
	{% endfor %}
</div>

