{% extends 'partials/base.html.twig' %}
{% set grid_size = theme_var('grid-size') %}


{% block body %}
    <section id="body-wrapper" class="interactive-systems-container">
        <section class="container {{ grid_size }} p-relative">

            {% block intro %}
            <section id="intro">
                {% block mainimg %}
                    <img class="main-img" src="{{ page.url() ~ '/' ~ page.header.top_img }}"/>
                {% endblock mainimg %}
                <h1 class="intro-title">
                {{ page.header.title }}
                </h1>
                <section class="page-content">
                {% block pagecontent %}
                    {% for row in page.header.rows %}
                        <section class="columns with-top-space user-interfaces">
                            {% for column in row.columns %}
                                	{{ dump(column.img_col_width) }}
                                {% include "partials/article-block.html.twig" with {column_width: column.column_width, img_col_width: column.img_col_width ,title: column.title ,text: column.text ,img: column.img, has_img: column.has_img, img_position: column.img_position} %}
                            {% endfor %}
                        </section>
                    {% endfor %}
                {% endblock pagecontent %}
                </section>
            </section>
            {% endblock %}

            
        </section>

    </section>

{% endblock %}

{% block content %}
	{{ page.content|raw }}
{% endblock %}

