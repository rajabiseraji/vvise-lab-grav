{% extends 'partials/base.html.twig' %}
{% set grid_size = theme_var('grid-size') %}
{% set top_image = 'interactive-hand.webp' %}


{% block body %}
    <section id="body-wrapper" class="interactive-systems-container">
        <section class="container {{ grid_size }} p-relative">

            {% block intro %}
            <section id="intro">
                {% block mainimg %}
                    <img class="main-img" src="{{ url('theme://images/' ~ top_image) }}"/>
                {% endblock mainimg %}
                <h1 class="intro-title">
                {{ page.header.title }}
                </h1>
                <section class="page-content">
                {% block pagecontent %}
                    {% for item in page.header.items %}
                        {% include "partials/img-text-row.html.twig" with {left_img: item.left_img, with_top_space: with_top_space, title: item.title, img_url: item.img, text: item.text} %}
                    {% endfor %}
                {% endblock pagecontent %}
                </section>
            </section>
            {% endblock %}

            
        </section>

    </section>

{% endblock %}

{% block content %}
	{{ page.content|raw }}
{% endblock %}

