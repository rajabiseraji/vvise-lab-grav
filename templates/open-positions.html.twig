{% extends 'partials/base.html.twig' %}
{% set grid_size = theme_var('grid-size') %}
{% set top_image = 'main.webp' %}


{% block body %}
    <section id="body-wrapper" class="open-positions-container">
        <section class="container {{ grid_size }} p-relative">

            {% block intro %}
            <section id="intro">
                <h1 class="intro-title">
                    {{ page.header.title }}
                </h1>
                {% block mainimg %}
                    <img class="main-img pt-2" src="{{ url('user://pages/06.open-positions/' ~ top_image) }}"/>
                {% endblock mainimg %}
            </section>
            {% endblock intro %}
        </section>
    </section>

{% endblock %}